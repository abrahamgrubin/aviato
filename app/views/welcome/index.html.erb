<div id= "myCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to= "0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to= "1"></li>
    <li data-target="#myCarousel" data-slide-to= "2"></li>
  </ol>

<div class="carousel-inner">

  <div class="item active">
    <img src="https://can-do-health.org/wp-content/uploads/2013/09/Slider_IMG_6521_1920X740.jpg" alt="food" class="img-responsive">
    <div class="carousel-caption">
      <h1 class="welcome">Welcome to Aviato!</h1>
    </div>
  </div>

  <div class="item">
    <img src="http://medias.martinique.ingenie.fr/images/info_pages/multitailles/1920x1440_martinique-salines-1920x740-35.jpg" alt="beech" class="img-responsive">
