<h1>Create a Bookmark</h1>

<ul>
	<li>Add a bookmark</li>
	<li>Create a hashtag to categorize your bookmarks</li>
	<li>Get started already!</li> 
</ul>

  <div class="col-md-8">
    <%= form_for @bookmark do |f| %>
      <div class="form-group">
        <%= f.text_area :title, class: 'form-control', placeholder: "Paste or write in URL" %>
      </div>
      <div class="form-group">
        <%= f.text_area :content, rows: 8, class: 'form-control', placeholder: "Enter Bookmark description and hashtags" %>
      </div>
       <%= f.submit "Save", class: 'btn btn-custom' %>
     <% end %>
</div>
</div>
