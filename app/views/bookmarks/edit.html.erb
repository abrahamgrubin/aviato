<div class="container">
<h1>Edit Comment</h1>

<div class="row">
	<div class="col-md-8">
		<%= form_for @bookmark do |f| %>
		<div class ="form-group">
			<%= f.label :content %>
			<%= f.text_area :content, rows: 6, class: 'form-control', placeholder: "Change description"%>
		</div>
		<%= f.submit "Save", class: 'btn btn-success' %>
	 <% end %>
  </div>
</div>
</div>

