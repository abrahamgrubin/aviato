<%#create a container
#and thumbnails for each bookmark%> 
<div class="container">
<div class="row">
	<div class="col-md-6">
		<h1><%= @hashtag.name %></h1>
   
    <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <% @bookmark.each do |book|%>
        <div class="caption">
          <h3><%= link_to book.title, book %></h3>
          <p><%= book.content %></p>
          <% end %>  
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
 
  
